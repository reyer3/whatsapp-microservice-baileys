{
  "name": "whatsapp-microservice-baileys",
  "version": "1.0.0",
  "description": "Microservicio para conectar instancia WhatsApp usando Baileys - envío y recepción de mensajes de texto",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "whatsapp",
    "baileys",
    "microservice",
    "nodejs",
    "typescript"
  ],
  "author": "Ricky",
  "license": "MIT",
  "dependencies": {
    "baileys": "^6.7.8",
    "express": "^4.19.2",
    "dotenv": "^16.4.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.0",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "typescript": "^5.4.5",
    "ts-node-dev": "^2.0.0",
    "rimraf": "^5.0.7"
  },
  "engines": {
    "node": ">=17.0.0"
  }
}